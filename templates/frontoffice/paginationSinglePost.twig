
{% set paginationPath = "post/" %}

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        {% if prevId %}
            <li class="page-item"><a class="page-link" href="{{ paginationPath }}{{ prevId }}&#47;1">Précédent</a></li>
        {% else %}
            <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="false">Précédent</a></li>
        {% endif %}

        {% if nextId %}
            <li class="page-item"><a class="page-link" href="{{ paginationPath }}{{ nextId }}&#47;1">Suivant</a>
            <li class="page-item"><a class="page-link" href="posts&#47;1">Tous les articles</a></li>
        {% else %}
            <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Suivant</a></li>
            <li class="page-item"><a class="page-link" href="posts&#47;1">Tous les articles</a></li>
        {% endif %}
    </ul>
</nav>
   

