{% extends 'layoutFront.twig' %}

{% block content %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                {% if session.error %}
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        {{ session.error }}
                    </div>    
                {% endif %} 
                <h2 class="section-heading">Tous les articles</h2>
                <hr>

                {% for post in listposts %}
                    <div class="post-preview">
                        <a href="post&#47;{{ post.postId }}&#47;1">
                        <h2 class="post-title">
                            {{ post.title }}
                        </h2>
                        <h3 class="post-subtitle">
                            {{ post.chapo }}
                        </h3>
                        </a>
                        <p class="post-meta">Publi√© par {{ post.authorLogin }} le {{ post.lastUpdate }}</p>
                    </div>
                    <div class="clearfix">
                    <a class="btn btn-primary float-right" href="post&#47;{{ post.postId }}&#47;1">Lire la suite &rarr;</a>
                </div>
                    <hr>
                {% endfor %}

                <!-- Pager -->
                <div class="clearfix">                                
                </div>
                {% include 'frontoffice/PaginationPostsPage.twig' with {
                    currentPage: currentPage,
                    lastPage: totalPages
                } only %}
            </div>
        </div>
    </div>
{% endblock %}