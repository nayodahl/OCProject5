{% extends 'LayoutBack.twig' %}

{% block content %}
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12 mx-auto">
                <h2 class="section-heading">Membres :</h2>
                <hr>
                <br>
                {% if session.success %}
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        {{ session.success }}
                    </div>    
                {% endif %}
                {% if session.error %}
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        {{ session.error }}
                    </div>    
                {% endif %} 

                <table class="table table-striped table-bordered table-hover table-responsive-lg">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Login</th>
                            <th scope="col">Email</th>
                            <th scope="col">Inscrit le</th>
                            <th scope="col">Profil</th>
                            <th scope="col">Droits Admin</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in listUsers %}
                        <tr>
                            <td>{{ user.userId }}</td>
                            <td>{{ user.login }}</td>
                            <td>{{ user.email }}</td>
                            <td class="td-lastupdate">{{ user.created }}</td>
                            <td>{{ user.type }}</td>
                            {% if user.type == 'admin' %}
                                <td><a href="/super/demote/{{ user.userId }}">Retirer</a></td>
                            {% endif %}
                            {% if user.type == 'member' %}
                                <td><a href="/super/promote/{{ user.userId }}">Donner</a></td>
                            {% endif %}
                        </tr> 
                        {% endfor %}                        
                    </tbody>
                </table>

                <!-- Pager -->
                <div class="clearfix"></div>
                {% include 'BackOffice/PaginationUsers.twig' with {
                    currentPage: currentPage,
                    lastPage: totalPages
                } only %}
            </div>
        </div>
    </div>
{% endblock %}