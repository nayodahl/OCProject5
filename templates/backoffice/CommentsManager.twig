{% extends 'LayoutBack.twig' %}

{% block content %}
  
    {% if listcomments %}
    <div class="container" id="comments">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">   
                <h2 class="section-heading">Commentaires en attente :</h2>
                <hr>                                           

                {% for comment in listcomments %}
                <div class="post-preview">
                    <p class="post-meta">{{ comment.authorLogin }}, le {{ comment.lastUpdate }} :</p>
                    <p>
                        {{ comment.content }}
                    </p>
                </div>
                <ul class="pagination justify-content-center">
                    <li class="page-item"><button type="submit" class="btn btn-primary" id="RefuseButton">Refuser</button></li>
                    <li class="page-item"><button type="submit" class="btn btn-primary" id="ApproveButton">Approuver</button></li>
                </ul>
                <hr>
                {% endfor %}
                <!-- Pager for Comments-->
                <div class="clearfix">
                    {% include 'frontoffice/PaginationComment.twig' with {
                        currentPage: currentPage,
                        lastPage: totalPages,    
                    } only %}
                </div>
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}