
    {% if lastPage > 1 %}

        {# the number of first and last pages to be displayed #}
        {% set extremePagesLimit = 3 %}

        {# the number of pages that are displayed around the active page #}
        {% set nearbyPagesLimit = 2 %}

        {% set paginationPath = "index.php?action=post&id=" %}


        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                {% if currentPage > 1 %}
                    <li class="page-item"><a class="page-link" href="{{ paginationPath }}{{ currentPage-1  }}">Précédent</a></li>
                {% else %}
                    <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="false">Précédent</a></li>
                {% endif %}

                {% if currentPage < lastPage %}
                    <li class="page-item"><a class="page-link" href="{{ paginationPath }}{{ currentPage+1 }}">Suivant</a>
                    <li class="page-item"><a class="page-link" href="index.php?action=page&amp;id=1">Tous les articles</a></li>
                {% else %}
                    <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1" aria-disabled="true">Suivant</a></li>
                    <li class="page-item"><a class="page-link" href="index.php?action=page&amp;id=1">Tous les articles</a></li>
                {% endif %}
            </ul>
        </nav>
    {% endif %}

